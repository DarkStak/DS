         <head runat="server">
             <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
             <title></title>
             <link href="~/Profile.css" rel="stylesheet" />
         </head>
         <body>
             <form id="form1" runat="server">
                 <section>
                     <img src="~/Stock/pngegg.png" style="height: 750px; width: 500px" />
                 </section>
                 <div class="sec2">
                     <div class="container">
                         <div class="content">
                             <img src="@account.Avatar" alt="" width="150" height="150" />
                         </div>
                         <div class="content1">
                             <input type="submit" value="Поменять аватар" />
                         </div>
                         <div class="content2">
                             <h1>@account.login</h1>
                         </div>
                         <div class="content3">
                             <a href="~/Profile/change">Смена пароля</a>
                         </div>
                         <br />
                         <br />
                         <div class="content5">
                             <a href="~/Profile/purchases">Список покупок</a>
                         </div>
                         <br />
                         <br />
                         <div class="content4">
                             <a href="~/Profile/purchased">Корзина</a>
                         </div>

                     </div>
                 </div>
             </form>
         </body>
     </html> 
     } 
}